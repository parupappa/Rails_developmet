<h1 class="display-4 text-primary">Posts#new</h1>
<%=form_tag(controller:'posts', action:'new') do %>
    <div class="row">
        <div class="form-group">
            <div class="col-xs-4">
                <label for="hometeam">Hometeam</label>
                <input class="form-control"  type="text">
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                <label for="hr">ホームチームの得点</label>
                <input class="form-control" id="ex2" type="number">
            </div>
        </div>

        <div class = "form-group">
            <p> - </p>
        </div>

        <div class="form-group">
            <div class="col-xs-2">
                <label for="ar">アウェイチームの得点</label>
                <input class="form-control"  type="number">
            </div>
        </div>

        <div class="form-group">
            <div class="col-xs-4">
                <label for="awayteam">Awayteam</label>
                <input class="form-control" type="text">
            </div>
        </div>
        <input type="submit" value = "投稿">
    </div>
<% end %>
